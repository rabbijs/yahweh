{{outlet}}

<h1>Actor System Admin</h1>
<br/>


<div class='row'>
  {{#each hosts as |host|}}
    <h3>Rabbi Host @ {{host.ip}}</h3>

    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Identity</th>
          <th scope="col">Host IP</th>
          <th scope="col">Exchange</th>
          <th scope="col">Routing Key</th>
          <th scope="col">Queue</th>
        </tr>
      </thead>
      <tbody>
        {{#each host.actors as |actor|}}
          <tr>
            <td>{{actor.id}}</td>
            <td>{{actor.ip}}</td>
            <td>{{actor.exchange}}</td>
            <td>{{actor.routingkey}}</td>
            <td>{{actor.queue}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/each}}
</div>
